{
  "manifest_version": 3,
  "name": "TrueTrend AI",
  "version": "1.0.0",
  "description": "Attach TrueTrend AI to any chart. Voice BUY/SELL, 9 strategies, OTC support, and a built-in trade journal.",
  "action": { "default_popup": "popup.html", "default_title": "TrueTrend AI" },
  "permissions": ["storage", "activeTab", "scripting"],
  "host_permissions": ["https://true-trend-ai-assistant.vercel.app/*"],
  "icons": {
    "16": "icons/truetrend-16.png",
    "48": "icons/truetrend-48.png",
    "128": "icons/truetrend-128.png"
  }
}
