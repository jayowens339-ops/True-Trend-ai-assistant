{
  "manifest_version": 3,
  "name": "TrueTrend Ultimate (Universal v4.1)",
  "version": "4.1",
  "description": "TrueTrend Ultimate provides streamlined trading signals and chart analysis directly in your browser.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "storage",
    "tabs",
    "activeTab"
  ],
  "host_permissions": [
    "*://*.pocketoption.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["*://*.pocketoption.com/*"],
      "js": ["content.js"]
    }
  ]
}
